@model Odonto.Models.Agenda

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Agendas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AgendaId" />
            <div class="form-group">
                <label asp-for="ProfissionalId" class="control-label"></label>
                <select asp-for="ProfissionalId" asp-items="@ViewBag.Profissionais" class="form-control"></select>
                <span asp-validation-for="ProfissionalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeInicio" class="control-label"></label>
                <input asp-for="DataDeInicio" class="form-control" />
                <span asp-validation-for="DataDeInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeFim" class="control-label"></label>
                <input asp-for="DataDeFim" class="form-control" />
                <span asp-validation-for="DataDeFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
